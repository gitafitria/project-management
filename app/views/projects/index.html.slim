p#notice
  = notice
.row
  .col-md-2
    h2
      | Projects List
  .col-md-3
    br
    = link_to 'New Project', new_project_path, class: "btn btn-primary", data: {turbolinks: false}

br

#project_list
  table.table
    thead
      tr
        th Project name
        th Created at
        th Status
        th Option
    tbody
      - @projects.each do |project|
        tr
          td
            = project.project_name
          td
            = project.created_at.strftime("%d %b %Y")
          td
            = project.status

          td
            = link_to 'Show', project
            = " | "
            = link_to 'Edit', edit_project_path(project), data: {turbolinks: false}
            = " | "
            = link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }
  br
