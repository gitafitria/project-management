
<%= simple_form_for(@invoice_item) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :quantity %>
    <%= f.input :unit_price %>
    <%= f.input :invoice_id %>
    <%= f.input :is_valid %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
